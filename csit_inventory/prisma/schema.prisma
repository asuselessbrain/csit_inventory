generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String     @id @default(uuid())
  email           String     @unique
  password        String
  role            UserRole   @default(STUDENT)
  userStatus      UserStatus @default(ACTIVE)
  isEmailVerified Boolean    @default(false)
  otp             String?
  otpExpiry       DateTime?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  student  Student?
  admins   Admin?
  teachers Teacher?

  @@map("users")
}

model Student {
  id                 String     @id @default(uuid())
  email              String     @unique
  name               String
  phoneNumber        String
  address            String
  studentId          String     @unique
  registrationNumber String     @unique
  profilePhoto       String?
  dateOfBirth        DateTime
  session            String
  schoolName         String
  collageName        String
  status             UserStatus @default(ACTIVE)
  isApproved         Boolean    @default(false)
  isDeleted          Boolean    @default(false)
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt

  user          User            @relation(fields: [email], references: [email])
  projectTheses ProjectThesis[]

  @@map("students")
}

model Admin {
  id          String   @id @default(uuid())
  email       String   @unique
  name        String
  phoneNumber String
  photoUrl    String?
  isDeleted   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [email], references: [email])

  @@map("admins")
}

model Teacher {
  id          String             @id @default(uuid())
  email       String             @unique
  name        String
  phoneNumber String
  address     String
  photoUrl    String?
  faculty     String
  department  Department
  designation TeacherDesignation @default(LECTURER)
  isChairman  Boolean            @default(false)
  joinedAt    DateTime
  status      TeacherStatus      @default(ACTIVE)
  isDeleted   Boolean            @default(false)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  user           User            @relation(fields: [email], references: [email])
  projectTheses  ProjectThesis[]
  courseTeachers CourseTeacher[]

  @@map("teachers")
}

model Courses {
  id          String       @id @default(uuid())
  courseCode  String       @unique
  courseName  String
  description String?
  credits     Float
  status      CourseStatus @default(ACTIVE)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  projectTheses  ProjectThesis[]
  courseTeachers CourseTeacher[]

  @@map("courses")
}

model CourseTeacher {
  id        String   @id @default(uuid())
  courseId  String
  course    Courses  @relation(fields: [courseId], references: [id])
  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([courseId, teacherId])
  @@map("course_teachers")
}

model ProjectThesis {
  id           String              @id @default(uuid())
  title        String
  description  String
  type         ProjectThesisType
  status       ProjectThesisStatus @default(PENDING)
  courseId     String
  course       Courses             @relation(fields: [courseId], references: [id])
  studentId    String
  student      Student             @relation(fields: [studentId], references: [id])
  supervisorId String
  supervisor   Teacher             @relation(fields: [supervisorId], references: [id])
  semester     SemesterType        @default(FIRST)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks                   Task[]
  projectThesisUpdateLogs ProjectThesisUpdateLog[]

  @@map("projects")
}

model Task {
  id                      String                   @id @default(uuid())
  title                   String
  description             String
  dueDate                 DateTime
  status                  TaskStatus               @default(TODO)
  projectThesisId         String
  projectThesis           ProjectThesis            @relation(fields: [projectThesisId], references: [id])
  note                    String?
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @updatedAt
  projectThesisUpdateLogs ProjectThesisUpdateLog[]

  @@map("tasks")
}

model ProjectThesisUpdateLog {
  id              String        @id @default(uuid())
  projectThesisId String
  projectThesis   ProjectThesis @relation(fields: [projectThesisId], references: [id])
  taskId          String
  task            Task          @relation(fields: [taskId], references: [id])
  fileUrl         String
  updatedAt       DateTime      @default(now())

  @@map("project_thesis_update_logs")
}

enum UserRole {
  ADMIN
  TEACHER
  STUDENT
}

enum UserStatus {
  ACTIVE
  BLOCKED
  DELETED
}

enum StudentStatus {
  ACTIVE
  INACTIVE
  GRADUATED
}

enum TeacherStatus {
  ACTIVE
  STUDY_LEAVE
  RETIRED
}

enum TeacherDesignation {
  LECTURER
  ASSISTANT_PROFESSOR
  ASSOCIATE_PROFESSOR
  PROFESSOR
}

enum Department {
  Computer_Science_And_Information_Technology
  Computer_science_And_Communication_Engineering
  Electrical_And_Electronic_Engineering
  Physics_And_Mechanical_Engineering
  Mathematics
}

enum ProjectThesisType {
  PROJECT
  THESIS
}

enum ProjectThesisStatus {
  PENDING
  APPROVED
  REJECTED
  in_PROGRESS
  COMPLETED
}

enum SemesterType {
  FIRST   @map("1st")
  SECOND  @map("2nd")
  THIRD   @map("3rd")
  FOURTH  @map("4th")
  FIFTH   @map("5th")
  SIXTH   @map("6th")
  SEVENTH @map("7th")
  EIGHTH  @map("8th")
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  REVIEW
  DONE
}

enum CourseStatus {
  ACTIVE
  ARCHIVED
}
